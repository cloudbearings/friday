<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.jwrench.friday.interest.InterestDetailFragment">

    <EditText
        android:id="@+id/detail_title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/detail_title_hint"
        android:textStyle="bold"
        android:background="@null"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/detail_note_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/detail_note_hint"
        android:background="@null"
        android:padding="10dp"/>

    <NumberPicker
        android:id="@+id/detail_minutes_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.75"
        android:scaleY="0.75">

    </NumberPicker>

    <Spinner
        android:id="@+id/detail_minutes_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        </Spinner>

    <EditText
        android:id="@+id/detail_minutes_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/detail_minutes_hint"
        android:background="@null"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:text="@string/detail_start_date_label"/>

            <EditText
                android:id="@+id/detail_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/detail_start_date_hint"
                android:background="@null"
                android:cursorVisible="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:text="@string/detail_stop_date_label"/>

            <EditText
                android:id="@+id/detail_stop_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/detail_stop_date_hint"
                android:background="@null"
                android:cursorVisible="false"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
